@model News
@{
    ViewData["Title"] = "Create";
}

<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Create News
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red; margin-bottom:30px;"></div>
            <div class="intro-y box p-5">
                <div>
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="Text1">Title</label>
                    <input asp-for="Text1" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="Aforizm">Aforizm</label>
                    <input asp-for="Aforizm" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="Text2">Text1</label>
                    <input asp-for="Text2" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="Text3">Text3</label>
                    <input asp-for="Text3" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="About">About</label>
                    <input asp-for="About" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div>
                    <label asp-for="Author">Author</label>
                    <input asp-for="Author" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div class="mt-3 tag-menu-basqasi">
                    <span id="addTag">+</span>
                    <div class="tag-item">
                        <label asp-for="NewsToTags[0].TagId">Tag</label>
                        <div class="mt-2">
                            <select asp-for="NewsToTags[0].TagId" asp-items="@(new SelectList(ViewBag.Tag, "Id", "Name"))" data-placeholder="Select your favorite actors" class="select2 w-full">
                                <option selected="" disabled>Select Tag</option>
                            </select>
                        </div>
                        <span class="deleteTag">x</span>
                    </div>
                    <hr style="margin:10px 0px" />

                </div>
                <div class="text-right mt-5">
                    <a asp-area="admin" asp-controller="News" asp-action="index" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>
                </div>
            </div>
        </form>
        <!-- END: Form Layout -->
    </div>
</div>



