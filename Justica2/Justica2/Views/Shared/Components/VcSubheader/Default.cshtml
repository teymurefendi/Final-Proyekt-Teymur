@model Subheader
@{
    Layout = null;
}


<section id="sub-header" style="background:@Model.Name">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>@Model.PageName</h1>
                @if (ViewBag.Active == "About")
                {
                    <div class="h1-border" style="width: 190px;">
                    </div>
                }
                else
                {
                    if (ViewBag.Active == "Contact")
                    {
                        <div class="h1-border" style="width: 220px;">
                        </div>
                    }
                    else
                    {
                        if (ViewBag.Active == "News")
                        {
                            <div class="h1-border" style="width: 130px;">
                            </div>
                        }
                        else
                        {
                            if (ViewBag.Active == "Practice")
                            {
                                <div class="h1-border" style="width: 300px;">
                                </div>
                            }
                            else
                            {
                                if (ViewBag.Active == "Faq")
                                {
                                    <div class="h1-border" style="width: 100px;">
                                    </div>
                                }
                                else
                                {
                                    if (ViewBag.Active == "Team")
                                    {
                                        <div class="h1-border" style="width: 200px;">
                                        </div>
                                    }
                                }
                            }
                        }
                    }
                }
                <p>Reputation. Respect. Result.</p>
            </div>
        </div>
    </div>
</section>
